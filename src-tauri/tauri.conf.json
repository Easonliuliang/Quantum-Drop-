{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Quantum Drop",
  "version": "0.1.4",
  "identifier": "com.aetheros.quantumdrop",
  "build": {
    "beforeDevCommand": "npm run dev:ui",
    "beforeBuildCommand": "npm run build:ui",
    "devUrl": "http://localhost:5174",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Quantum Drop · 量子快传",
        "width": 1200,
        "height": 780,
        "resizable": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg", "nsis", "deb", "appimage"],
    "icon": [
      "icons/icon.png"
    ]
  },
  "plugins": {}
}
